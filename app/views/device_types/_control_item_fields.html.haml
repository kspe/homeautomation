.nested-fields
  %table.table.table-striped
    %thead
      %tr
        %th Kind
        %th Name
        %th Value
        %th Action
    %tbody
      %tr
        %td
          .form-group
            = f.collection_select :kind, Control.all, :kind, :kind, class: 'form-control'
        %td
          .form-group
            = f.text_field :name, class: 'form-control'
        %td
          .form-group
            = f.text_field :value, class: 'form-control'
        %td
          = link_to_remove_association "x", f, class: 'btn btn-sm btn-danger'
